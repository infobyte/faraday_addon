{
  "description": "Addon para agregar vulnerabilidades a Faraday desde el propio browser",
  "manifest_version": 2,
  "name": "Faraday",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ], 

  "icons": {
    "48": "icons/faraday-ico.png"
  },

  "browser_action": {
    "default_icon": "icons/faraday-ico.png",
    "default_title": "Faraday requester",
    "default_popup": "popup/last_requests.html"
  },

  "background": {
    "scripts": ["background.js", "fapi.js"]
  }
}
